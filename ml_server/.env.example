# ML Server Configuration
ML_SERVER_PORT=8000
ML_SERVER_HOST=0.0.0.0

# Model Paths
MODEL_PATH=./models/plant_disease_model.h5
CLASS_NAMES_PATH=./models/class_names.json

# Image Processing
IMAGE_SIZE=256
BATCH_SIZE=32

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/ml_server.log

# CORS (Comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Model Configuration
MODEL_INPUT_SHAPE=256,256,3
MODEL_CLASSES=38  # Number of classes in the model

# Performance
WORKERS=4
THREADS_PER_WORKER=2

# Health Check
HEALTH_CHECK_PATH=/health
READINESS_PATH=/ready

# Authentication (if needed)
# API_KEY=your_ml_service_api_key

# GPU Configuration (if using GPU)
# CUDA_VISIBLE_DEVICES=0  # Use GPU 0, set to -1 to use CPU
# TF_FORCE_GPU_ALLOW_GROWTH=true

# Memory Management
# TF_GPU_MEMORY_GROWTH=true
# TF_CPP_MIN_LOG_LEVEL=2  # Suppress TensorFlow info messages
